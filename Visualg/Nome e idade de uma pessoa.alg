algoritmo "Nome e idade de uma pessoa"

var
nomepessoa:caracter
idadepessoa:inteiro
inicio
escreva("Informe o nome da pessoa: ")
leia(nomepessoa)
escreva("Informe a idade dessa pessoa: ")
leia(idadepessoa)
enquanto idadepessoa < 0 faca
   escreva("Não é possivel uma pessoa ter uma idade negativa,escreva a idade novamente: ")
   leia(idadepessoa)
fimenquanto
fimalgoritmo
